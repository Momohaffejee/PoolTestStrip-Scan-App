                    app:layout_constraintTop_toTopOf="parent" />


            </android.support.constraint.ConstraintLayout>
            <TableRow>

                <TextView
                    android:width="200dp"
                    android:height="50dp"
                    android:text="pH :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtpH"
                    android:width="200dp"
                    android:fontFamily="@font/fjalla_one"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:text="0" />
            </TableRow>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/tableRow5"
                android:layout_height="31dp">

                <Button
                    android:id="@+id/btnta0"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:background="#DAB90E"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btnta40"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="40dp"
                    android:background="#8D9317"
                    app:layout_constraintEnd_toStartOf="@+id/btnta80"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnta80"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#46622B"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.425"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnta120"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="40dp"
                    android:background="#1C5E45"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnta80"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/btnta180"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="80dp"
                    android:background="#0D7664"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/btnta120"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnta240"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:background="#0E6F6F"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
            <TableRow android:orientation="vertical">

                <TextView
                    android:width="200dp"
                    android:height="50dp"
                    android:fontFamily="@font/fjalla_one"
                    android:text="Total Alkalinity (TA) :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtAlkalinity"
                    android:width="200dp"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/fjalla_one"
                    android:singleLine="true"
                    android:text="0" />
            </TableRow>


        </TableLayout>

        <Button
            android:id="@+id/btnSavePool"
            android:text="Save"
            android:fontFamily="@font/fjalla_one"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
