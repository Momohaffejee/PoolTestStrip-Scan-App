                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnbr10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <Button
                    android:id="@+id/btnbr10"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="80dp"
                    android:background="#578E7F"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnbr20"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:background="#4D979E"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
            <TableRow>

                <TextView
                    android:width="200dp"
                    android:height="50dp"
                    android:text="Total Bromine (Br) :"
                    android:fontFamily="@font/fjalla_one"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtBromine"
                    android:width="200dp"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/fjalla_one"
                    android:singleLine="true"
                    android:text="0" />
            </TableRow>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/tableRow3"
                android:layout_height="31dp">

                <Button
                    android:id="@+id/btnfh0"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:background="#E3DBB2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btnfh1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="40dp"
                    android:background="#CCD7A7"
                    app:layout_constraintEnd_toStartOf="@+id/btnfh2"
