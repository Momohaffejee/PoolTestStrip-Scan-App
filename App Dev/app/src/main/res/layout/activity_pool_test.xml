                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/btnfh5"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
            <TableRow>

                <TextView
                    android:width="200dp"
                    android:height="50dp"
                    android:text="Free Chlorine (FH) :"
                    android:fontFamily="@font/fjalla_one"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtFreeChlorine"
                    android:layout_height="match_parent"
                    android:width="200dp"
                    android:imeOptions="actionNext"
                    android:fontFamily="@font/fjalla_one"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:text="0" />
            </TableRow>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/tableRow4"
                android:layout_height="31dp">

                <Button
                    android:id="@+id/btnph62"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:background="#F7B350"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btnph68"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="40dp"
                    android:background="#DBF89C44"
                    app:layout_constraintEnd_toStartOf="@+id/btnph72"
                    app:layout_constraintHorizontal_bias="0.804"
                    app:layout_constraintStart_toEndOf="@+id/btnph62"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnph72"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#F58556"
                    app:layout_constraintEnd_toEndOf="parent"
