<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.poolHealth.PoolTestActivity">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chemical Balance Report"
            android:fontFamily="@font/fjalla_one"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="32dp" />

        <TableLayout
            android:id="@+id/tblPoolTest"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:fontFamily="@font/fjalla_one"
            android:stretchColumns="*">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/tableRow"
                android:layout_height="31dp">

                <Button
                    android:id="@+id/btnth0"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:background="#39587D"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btnth100"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="60dp"
                    android:background="#545F89"
                    app:layout_constraintEnd_toStartOf="@+id/btnth200"
                    app:layout_constraintHorizontal_bias="0.945"
                    app:layout_constraintStart_toEndOf="@+id/btnth0"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnth200"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#47333D"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnth400"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#5A3245"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnth800"
                    app:layout_constraintHorizontal_bias="0.526"
                    app:layout_constraintStart_toEndOf="@+id/btnth200"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <Button
                    android:id="@+id/btnth800"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:background="#763046"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <TableRow>

                <TextView
                    android:width="200dp"
                    android:height="50dp"
                    android:text="Total Hardness (TH) :"
                    android:fontFamily="@font/fjalla_one"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtTotalHardness"
                    android:width="200dp"
                    android:fontFamily="@font/fjalla_one"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:text="0" />
            </TableRow>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/tableRow2"
                android:layout_height="31dp">

                <Button
                    android:id="@+id/btnbr0"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:background="#E3DBB2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btnbr1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="40dp"
                    android:background="#D1E08C"
                    app:layout_constraintEnd_toStartOf="@+id/btnbr2"
                    app:layout_constraintHorizontal_bias="0.974"
