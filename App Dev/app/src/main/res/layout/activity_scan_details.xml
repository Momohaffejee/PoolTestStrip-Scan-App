<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.poolHealth.ScanDetails">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fjalla_one"
                android:text="Pool Scanner"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="48dp" />
            <TableLayout android:id="@+id/txtPersonaldetailTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <TableRow>
                    <TextView
                        android:text="Pool No:" android:width ="120dp"
                        android:fontFamily="@font/fjalla_one"
                        android:layout_marginLeft="7dp"/>
                    <TextView
                        android:id="@+id/txtScanNo" android:width="200dp" />
                </TableRow>
                <TableRow>


                </TableRow>
            </TableLayout>


            <TableLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:stretchColumns="*">
                <TableRow>
                    <Button android:text="New Pool"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="211dp"
                        android:fontFamily="@font/fjalla_one"
                        android:id="@+id/btnSave"/>


                </TableRow>
                <Button android:text="Existing Pool"
                    android:background="@color/colorPrimary"
                    android:layout_below="@id/btnSave"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fjalla_one"
                    android:id="@+id/btnExist"/>
                <TextView
                    android:id="@+id/old_pool"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/fjalla_one"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="7dp"
                    android:layout_below="@+id/btnExist"
                    android:text="Input Pool No. here: ______________________"/>
                <TableRow>

                    <Button android:text="Scan Test Strip"
                        android:background="@color/colorPrimaryDark"
                        android:fontFamily="@font/fjalla_one"
                        android:id="@+id/btnPoolTest"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
